
<h1>Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Username</th>
      <th>Role</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <% if can? :edit, @users %>
          <td><%= link_to 'Edit', edit_user_path(user),class:"btn bi-pencil-fill"  %></td>
        <% end %>
        <% if can? :edit, @users %>
          <% if user.id != 1 %>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' },
                            class:"btn bi-trash-fill" %></td>
          <% else %>
            <td></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users%>
<br>
