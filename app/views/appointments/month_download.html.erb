<h1 class="display-4">Appointments</h1>
<hr class="my-4">
<div class="container-bordered">
  <div class="row">
    <div class="col">
      Date
    </div>
    <div class="col">
      <div class="row">
        <div class="row">
          <div class="col">
            Professional
          </div>
          <div class="col">
            Patient
          </div>
          <div class="col">
            Time
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr class="my-4">
  <% for i in 0..29 do %>
    <div class="row">
      <div class="col">
        <%= Date.today + i.days %>
      </div>
      <div class="col">
        <% Professional.all.each do |prof| %>
          <% prof.appointments.each do |appointment| %>
            <% if (Date.today + i.days) == appointment.date.to_date %>
              <div class="row">
                <div class="col">
                  <%=prof.name%>
                </div>
                <div class="col">
                  <%="#{appointment.name} #{appointment.surname}"%>
                </div>
                <div class="col">
                  <%=appointment.date.strftime("%I:%M%p")%>
                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
    <hr class="my-4">
  <% end %>
</div>