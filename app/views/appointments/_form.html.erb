<%= form_with(model: appointment) do |form| %>
  <% if appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
        <% appointment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class:'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :surname %>
    <%= form.text_field :surname, class:'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :phone %>
    <%= form.number_field :phone, class:'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :date %>
    <%= form.datetime_select :date, class:'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :notes %>
    <%= form.text_area :notes, class:'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :professional %>
    <%= form.collection_select :professional_id, Professional.order(:name),:id,:name, include_blank: true,
                               class:'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class:'btn btn-secondary' %>
  </div>
<% end %>
